/**kjs.wxss**/

page {
    position: relative;
    height: 100%;
}

.container {

    background: #fff;
    padding-bottom: 480rpx;
    box-sizing: border-box;
}


/* ==========================================================================
   main-roomUl
 ============================================================================ */
.main-roomUl {

    display: flex; 
    flex-flow: column nowrap;
    padding: 30rpx 45rpx;
}
    .roomUl-floor {

        display: flex;
        width: 600rpx;
        flex-flow: column nowrap;
        margin-top: 20rpx;
        padding: 0 0 0 65rpx;
        /*background: url('/images/core/kjs/classroom-icon.png') no-repeat;*/
        /*微信暂不支持静态bgimg文件，改用服务器url*/
        background: url('https://we.cqu.pt/app/images/core/kjs/classroom-icon.png') no-repeat;
        background-size: 30rpx 25rpx;
        background-position: 15rpx 8rpx;
    }
        .floor {

            flex: 1;
            width: 600rpx;
            display: flex;
            flex-wrap: wrap;
        }
            .floor text {
                
                padding-bottom: 25rpx;
                width: 120rpx;
                font-size: 11pt;
                letter-spacing: 0.1rem;
                text-align: center;
            }

/* ==========================================================================
   main-condition
 ============================================================================ */
.main-condition {

    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 100;
    display: flex;
    flex-flow: column wrap;
    width: 100%;
    height: 480rpx;
    border-top: 1rpx solid #F1F1F2;
}
    .condition {

        display: flex;
        box-sizing: border-box;
        padding: 0;
        width: 100%;
        height: 120rpx;
        white-space: nowrap;
    }
        .condition-li {

            display: inline-block;
            width: 111rpx;
            height: 120rpx;
            line-height: 120rpx;
            text-align: center;
        }
        .building-condition .condition-li {
            width: 115rpx;
        }
        .day-condition .condition-li {
            width: 115rpx;
        }
        .week-active,
        .day-active,
        .classTime-active,
        .building-active {
            color: #FFF;
            font-weight: 900;
        }
        .scroll-space {
            
            display: inline-block;
            width: 30rpx;
            height: 30rpx;
        }


