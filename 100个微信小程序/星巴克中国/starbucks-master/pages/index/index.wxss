/**index.wxss**/

.page-index{
  font-family: "微软雅黑"
}
.store {
  height: 295rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  background-color: #158447;
  color: #fff
} 

.store .icon{
    width: 120rpx;
    height: 120rpx;
    background: #fff;
    border-radius: 50%;    
}

.store .name{
    font-size: 36rpx;
    margin: 23rpx 0;
}

.store .tip{
    font-size: 26rpx
}

.banner swiper{
    width: 100%;
    height: 375rpx;
}

.banner swiper image{
    width: 100%;
    height: 375rpx;
}

.content{
    font-size: 30rpx;
    background-color: #efeff4
}

.content .quan{
    display: flex;
    padding: 20rpx;
    flex-wrap:wrap;
}

.content .quan .quan-item{
   background-color: #fff;
   margin: 0 10rpx;
   flex: 1;
   text-align: center;
   padding: 24rpx 0;
   min-width: 200rpx;
}

.content .quan .quan-item .money::before{
  content: "¥";
  font-size:24rpx;
}

.content .quan .quan-item .money{
    color: #158447;
    font-size: 48rpx;
}

.content .quan .quan-item .condition{
    margin: 18rpx 0 28rpx 0
}

.content .quan .quan-item .get-btn{
    margin: 0 auto;
    color: #158447;
    border: 2rpx #158447 solid;
    width: 120rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 6rpx;
    font-size: 26rpx
}

.content .recommend{
    display: flex;
    background-color: #fff;
    height: 500rpx;
    margin-bottom: 22rpx
}

.content .recommend .left-wrap{
    flex: 2;
    border-right:1rpx #e5e5e5 solid;

}
.content .recommend .right-wrap{
    flex: 1;
}

.content .recommend .left-item{
    padding: 22rpx 30rpx;
}

.content .recommend .right-item{
    height: 250rpx;
   padding:22rpx 30rpx 0 30rpx;
   box-sizing: border-box;
}
.content .recommend .right-item{
    height: 250rpx;
   padding:22rpx 30rpx 0 30rpx;
   box-sizing: border-box;
}

.content .recommend .right-item:first-child{
    border-bottom: 1rpx #e5e5e5 solid;
}

.content .recommend .left-wrap .title{
    font-size: 28rpx;
    color: #222222;
    line-height: 35rpx;
    text-overflow: -o-ellipsis-lastline;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;
}

.content .recommend .left-wrap .price{
   color: #e04904;
   padding: 16rpx 0
}

.content .recommend .left-wrap .price::before{
  content: "¥";
}
.content .recommend .pic{
    text-align: center
}
.content .recommend .left-wrap image{
    height: 330rpx;
    width: 330rpx;
}
.content .recommend .right-wrap image{
   height: 165rpx;
    width: 165rpx
}

.content .recommend .right-wrap .price{
   color: #e04904;
   padding: 0 0 16rpx 0
}

.content .recommend .right-wrap .price::before{
  content: "¥";
}

.content .hot{
    background-color: #fff;
    
}
.content .hot .label{
    height: 84rpx;
    width:100%;
    line-height: 84rpx;
    padding: 0 30rpx;
    font-size: 26rpx;
    color: #999999
}
.hot-wrap{
    display: flex
}
.hot-item{
    width: 50%;
    box-sizing: border-box;
    padding: 22rpx;
    border-top: 1rpx #e5e5e5 solid;
    flex: 1
}

.hot-item:nth-child(2n-1){
    border-right: 1rpx #e5e5e5 solid;
}

.hot-item .pic{
    text-align: center
}
.hot-item image{
    width: 335rpx;
    height: 335rpx
}

.hot-item .title{
    height: 72rpx;
    display: flex;
    line-height: 35rpx;
    flex-direction: column;
    justify-content: center;
    text-overflow: -o-ellipsis-lastline;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;
}


.hot-item  .price{
   color: #e04904;
   padding: 16rpx 0
}

.hot-item  .price::before{
  content: "¥";
}

.hot-item .info{
    position: relative
}

.hot-item .info .count::before{
    content:"已售"
}

.hot-item .info .count{
    position: absolute;
    right: 0;
    bottom: 20rpx;
    font-size: 24rpx;
    color: #999999;
}