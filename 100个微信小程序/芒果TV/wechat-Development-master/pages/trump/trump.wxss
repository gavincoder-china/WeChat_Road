.trump{
    position:relative;
    width:100%;
    height:100%;
}

.PicBg{
    position:absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
}

.PicBg image{
    width:100%;
    height:100%;
    filter:blur(15px);
}

.title{
    width:100%;
    text-align:center;
    color:#fff;
    margin:10px 0 40px 0;
    position:relative;
    z-index:10;
}

.content{
    z-index:10;
    position:relative;
    width:100%;
    height:490px;
}

.content swiper{
    height:100%;

}

.content swiper .swiper-item{
    text-align:center;
    position:relative;
    height:400px;  
    width:70%;
    margin:0 auto;
}

.content swiper .swiper-item .contMess{
    position:absolute;
    bottom:0px;
    left:0px;
    width:100%;
    color:#fff;
    font-size:13px; 
    text-align:left;
    background-color:rgba(0,0,0,0.3);
    padding:5px 0;
    text-indent:5px;
}

.content swiper .swiper-item .contMess text{
    display:block;
    margin-top:5px;
}

.content swiper .swiper-item image{
    width:100%;
    height:400px;
    border-radius: 5px;
}

.content swiper .swiper-item .contMess .Mess2{
    font-size:12px;
    color:#888;
}



