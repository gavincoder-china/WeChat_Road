
.swiper{margin-top:10px;}

.prompt {
  text-align: center;
  color:#ccc;
}
.prompt image{
  margin-top:100px;
  width:80rpx;
  height: 80rpx;
}
.prompt text {
  display: block;
  margin-top:10px;
}
.item{
  padding:0 15px;
  padding-bottom: 10px;
  margin:10px 0;
  background:#fff;
}
.body::after {
  content: "";
  display: block;
  clear: both;
}
.item .ddimg{
  width:80px;
  height: 80px;
  float: left;
  margin: 0 20rpx 20rpx 0;
}
.item .ddimg image {
  width:100%;
  height: 100%;
}
.item .ddcontent {
  padding-left:15px;
  float:left;
}
.item .ddcontent .h1 {
  font-size: 20px;
  color:#666;
}
.item .ddcontent .p {
  margin-top: 15px;
  color:#666;
  font-size: 14px;
}
.item .ddcontent .p text {
  margin-right:10px;
}
.ddhead{
  border-bottom: 1px solid #eee;
  margin-bottom: 10px;
  padding-bottom: 15px;
  padding-top:10px;
}
.ddhead:after {
  content: "";
  display: block;
  clear: both;
}
.ddhead text{
  margin-top:10px;
}
.ddhead .ddhao{
  font-size:14px;
  color:#666;
  float:left;
}
.ddhead .state{
  font-size: 14px;
  color:#666;
  float: right;
  margin-right: 2px;
}
.ddfooter{
  display: block;
  clear: both;
  border-top: 1px solid #eee;
  margin-top:10px;
  padding-top: 10px;
}
.ddfooter:after{
  content: "";
  display: block;
  clear: both;
}
.ddfooter .btn{
  float: right;
  font-size:12px;
  background: #F5B223;
  padding:8px 15px;
  border-radius: 5px;
  margin-left: 10px;
  color:#fff;
}

.ddfooter .jr{
  font-size:14px;
  color:#666;
}