
.header{
  height: 80px;
  overflow: hidden;
  position: relative;
  background: #fff;
}
.header .address{
  padding:15px 0;
}
.header .user{
  padding:10px 15px;
}
.header .user:after{
  content: "";
  display: block;
  clear: both;
}
.header .user .name{
  font-size: 16px;
  float: left;
  color:#333;
}
.header .user .tel{
  font-size: 16px;
  float: right;
  color:#333;
}
.header .ress{
  padding:0 15px 15px 15px;
  font-size:12px;
  color:#999;
}
.header .distribution{
  position: absolute;
  top: 0;
  left:0;
  font-size:12px;
  background: #6fb1f9;
  padding:3px 10px;
  color: #fff;
}
.xian{
  border-bottom:2px dashed #ff533b;
  position: absolute;
  width:100%;
  bottom: 0;
  left:0;
}
.xian2{
  background: #fff;
}
.toAddress{
    color: 9e9e9e;
    background: #fff;
    font-size: 18px;
    padding: 15px;
}
.box{
    margin-top:10px;
}
.box .title{
  font-size: 12px;
  color: #9e9e9e;
  padding:10px 15px;
}

.box .imgtu{
  margin-top:5px;
  padding:3px 15px;
  background: #fff;
  border-top:1px solid #eee;
  border-bottom:1px solid #eee;
  height: 30px;
}

.box .imgtu image{
  width:30px;
  height: 28px;
  float: left;
}
.box .imgtu text{
  line-height: 30px;
  font-size: 12px;
  float: left;
  padding-left:10px;
  color: #999;
}
.box .list {
  background: #fff;
  padding:10px 15px;
  margin-top:5px;
}
.box .list .item{
  font-size: 14px;
  line-height: 20px;
  color: #999;
}
.box .item:after{
  content: "";
  display: block;
  clear: both;
}
.box .item .left{
  float: left;
}
.box .item .right{
  float: right;
}
.box .fot{
  font-size: 14px;
  color: #333;
  margin-top:5px;
  border-top:1px solid #eee;
  padding-top:8px;
}
.box .fot .left{
  float: left;
}
.box .fot .right{
  float: right;
}
.box .fot:after{
  content: "";
  display: block;
  clear: both;
}
.number {
  width:110px;
  height: 50px;
  position: absolute;
  right:0;
  top:25px;
}
.number:after{
  content:"";
  display: block;
  clear: both;
}
.number .plus{
  width:30px;
  height: 30px;
  line-height: 35px;
  text-align: center;
  color:#fff;
  background: #ff533b;
  border-radius: 50%;
  font-size: 20px;
  float: left;
  margin-top:10px;
}
.number .sum{
  float: left;
  width:40px;
  line-height: 50px;
  font-size: 14px;
  text-align: center;
}
.number .jiax{
  margin-right:15px;
}

.footer{
  background: #fff;
  position: absolute;
  border-top:1px solid #eee;
  left:0;
  right:0;
  bottom: 0;
  height: 40px;
}
.footer .right{
  float: right;
}
.footer .left{
  float: left;
}
.footer .left {
  line-height: 40px;
  font-size: 14px;
  padding-left:15px;
  color:#666;
}
.footer .left .span {
  color:#ff533b;
  padding-left:5px;
}
.footer .right button{
  height: 40px;
  background: #F5B223;
  border:none;
  border-radius: 0;
  color:#fff;
  padding:0 40px;
}