/**app.wxss**/
.container {
  width: 100%;
  height: 100%;
  background-color: #f3f3f3;
} 
/**footer.wxss**/
.footer{
    position: fixed;
    z-index: 1001;
    bottom: 0;
    right: 0;
    left: 0;
    display: table;
    width: 100%;
    height: 50px;
    padding-right: 10px;
    padding-left: 10px;
    padding: 0;
    box-shadow: 0 -1px 0 0 rgba(0,0,0,.03);
    background-color: rgba(255,255,255,0.95);
    -webkit-backdrop-filter: blur(10px);
}
.tab-bar{
    height: 50px;
    display: -webkit-box;
}
.tab-bar view{
    width: 25%;
    overflow: hidden;
    height: 50px;
    line-height: 50px;
    text-align: center;
    color: #999;
    font-size: 15px;
}