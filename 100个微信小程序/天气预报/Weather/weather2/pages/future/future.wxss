page{
    height:100%;
    min-height:100%;
    background: #007AFF;
    color:#fff;
    font-family:"Microsoft Yahei","宋体";
    font-size:14px;
}
.content{
    position:relative;
     padding-left:20rpx;
    padding-right:20rpx;
    height:100%;
}
.main-bg{
    position:absolute;
    top:0;
    left:0;
    z-index:-1;
    min-height:100%;
    width:100%;
    height:100%;
    opacity:0.6;
}
.city{
    padding-top:50rpx;
    font-size:16px;
}
.future-container{
    margin-top:20rpx;
}
.future-item {
    width:355rpx;
    height:400rpx;
    display:inline-block;
    text-align:center;
}
.future-time{
    font-size:18px;
    padding-bottom:15rpx;
}
.future-img-container{
    text-align:center;
    padding-bottom:15rpx;
}
.future-img{
    display:inline-block;
    width: 126rpx;
    height: 90rpx;
}
.future-tem{
    font-size:18px;
}