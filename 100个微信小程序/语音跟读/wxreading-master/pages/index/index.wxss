.menu_container {
  background: #F5F5F5;
  padding: 32rpx 36rpx;
}

.material_item{
  position: relative;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 240rpx;
  margin-bottom: 32rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 14rpx 6rpx rgb(228, 228, 228);
}
.flower-icon{
  position: absolute;
  display: flex;
  align-items: center;
  left: -10rpx;
  top: 20rpx;
  width: 108rpx;
  height: 48rpx;
  background: url("data:image/png;base64,") no-repeat center center;
  background-size: contain;
}
.flower-num{
  width: 64rpx;
  text-align: center;
  color: #ffffff;
}
.cs-img{
  width: 240rpx;
  height: 240rpx;
  flex-shrink: 0;
  border-radius: 10rpx 0 0 10rpx;
}
.content_box{
  width: 100%;
  height: 240rpx;
  display: flex;
  background: #FFFFFF;
  flex-direction: column;
  padding: 44rpx 28rpx;
  box-sizing: border-box;
  border-radius: 0rpx 10rpx 10rpx 0 ;
}

.cs-progress{
  margin-top: 36rpx;
  margin-bottom: 20rpx;
}
.cs-text-title{
  font-size: 30rpx;
  max-height: 96rpx;
}
.cs-text{
  font-size: 12px;
  color: #6E6E6E;
}

/*fixed-flower-rank*/
.fixed-flower-rank{
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  bottom: 64rpx;
  right: 60rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #ffffff;
  box-shadow:0 4px 4px 2px #bbdbd4;
  background-color: #1ECFA7;
  color: #ffffff;
}
