.my_container{
    position: absolute;
    width: 100%;
    display: flex;
    height: 100%;
    flex-flow: column wrap;
    align-items: center;
    box-sizing: border-box;
    background-color: #1ECFA7;
    font: menu;
}

.my-portrait{
    width: 10rem;
    height: 10rem;
    margin-top: 2rem;
    border-radius: 50%;
}
.my-user-content{
    display: flex;
    width: 100%;
    height: 4rem;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
    color: #FFFFFF;
}
.my-user_name{
    font-size: 36rpx;
    margin-right: 10rpx;
}

.my-logout{
    position: absolute;
    width: 100%;
    line-height: 2rem;
    background-color: #FFFFFF;
    text-align: center;
    bottom: 2rem;
    color: grey;
    font-size: 28rpx;
}