  padding:0;

} 

.mojicontainer {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width:100vw;
  align-content:flex-start;
  align-items: flex-start;
  justify-content: flex-start;
  box-sizing: border-box;
  padding:0;
